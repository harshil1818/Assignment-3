inputstr= "Python is a case sensitive language"
length=len(inputstr)
print("length of input string:",length)
reversestr=inputstr[::-1]
print("reverse string:", reversestr)
newstr=inputstr[11:27]
print("new string:", newstr)
replacestr=inputstr.replace("a case sensitive","object oriented")
print("replace string:",replacestr)
index=inputstr.index("a")
print("index of substring 'a':",index)